extends includes/base
block whichtheme
  - var theme = 'environment'
block isfullwidth
  - var colSize = 'col-md-12'
block breadcrumb
  // BREADCRUMB
  include includes/breadcrumb
block custom-style
  if production
    link(href="/css/custom.css" rel='stylesheet' type='text/css')
  else
    link(href="/styles/css/custom.css" rel='stylesheet' type='text/css')
block main-content
  .row.addon-row.addon-row-attached
    .col-sm-12
      .page-header
        h1 Capacity charge review cart
      p
        a(href="#")
          span.fa.fa-arrow-left
          | &nbsp;Back to search results
  .row.addon-row.addon-row-attached
    .col-sm-12
      .review-header
        p.payment-engine-heading
          span.fa.fa-shopping-cart &nbsp;
          | Confirm cart details
    .col-sm-12
      .review-cart
        .review-cart-items
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.leaders
                li
                  span Account # 305671
                  span $5,666.30
                li.description Early discount amount
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.leaders
                li
                  span Account # 234567
                  span $155.85
                li.description Amount due on 03/13/2017
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.leaders
                li
                  span Account # 789345
                  span $200.00
                li.description Other (customer defined amount)
        .row.review-cart-total
          .col-sm-6
          .col-sm-6
            .cart-totals
              ul.leaders
                li 
                  span Subtotal
                  span 5,666.39
                li
                  span Tax
                  span $0
              ul.leaders
                li
                  span Total
                  span $5,666.39
  .row.addon-row.addon-row-attached
    .col-sm-12
      p.text-danger
        span.fa.fa-asterisk
        | &nbsp;Capacity charge cannot accept American Experss&nbsp;
        span.fa.fa-cc-amex
        | &nbsp;or Discover&nbsp; 
        span.fa.fa-cc-discover
        | &nbsp;card payments
    .col-sm-12
      button.btn.btn-payment-engine Proceed to billing
block custom-js
  if production
    script(src="/js/custom.js")
  else
    script(src="/js/custom.compiled.js")
