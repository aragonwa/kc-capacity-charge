extends includes/base
block whichtheme
  - var theme = 'environment'
block isfullwidth
  - var colSize = 'col-md-12'
block breadcrumb
  // BREADCRUMB
  include includes/breadcrumb
block custom-style
  if production
    link(href="/css/custom.css" rel='stylesheet' type='text/css')
  else
    link(href="/styles/css/custom.css" rel='stylesheet' type='text/css')
block main-content
  .row.addon-row.addon-row-attached
    .col-sm-12
      .page-header
        h1 Pay your Capacity Charge bill
  .row.addon-row.addon-row-attached
    .col-sm-12
      .call-out-text.call-out-text-primary
        p
          span.fa.fa-exclamation-triangle
          strong &nbsp;System status
        p The payment system is currenlty down for schedule maintenance.
  .row.addon-row.addon-row-attached
    .col-sm-12
      .alert-primary
      .capacity-charge-search.call-out-text.call-out-text-success.m-t-0
        - var searchDisabled = true;
        include searchInput
        p.m-t-md
          a(href="#" data-toggle="modal" data-target="#findSiteNumberModal") How do I find my account and site number?
    include findSiteNumberModal
block custom-js
  if production
    script(src="/js/custom.js")
  else
    script(src="/js/custom.compiled.js")
