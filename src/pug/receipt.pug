extends includes/base
block whichtheme
  - var theme = 'environment'
block isfullwidth
  - var colSize = 'col-md-12'
block breadcrumb
  // BREADCRUMB
  include includes/breadcrumb
block custom-style
  if production
    link(href="/css/custom.css" rel='stylesheet' type='text/css')
  else
    link(href="/styles/css/custom.css" rel='stylesheet' type='text/css')
block main-content
  .row.addon-row.addon-row-attached
    .col-sm-12
      .page-header
        .pull-right
          button.btn.btn-link
            span.fa.fa-download.fa-lg
          button.btn.btn-link
            span.fa.fa-print.fa-lg
        h1 Capacity charge receipt
        h2
          small Thank you for your payment
      p
        a(href="#")
          span.fa.fa-arrow-left
          | &nbsp;Back to Capacity Charge site
  .row.addon-row.addon-row-attached
    .col-sm-12
      .receipt-header
        p
          strong Please print this receipt for your records. For questions about your bill, please contact
        p 
          | King County Wasterwater Treatment Division
          br
          | Revenue/Accounts Receivable
          br
          | Customer Service: (206) 296-1450


    .col-sm-12
        p.m-b-0.payment-engine-heading
          | Transaction #
          span#transaction-number 56789000

        p Completed: 05/18/2017, 2:00 p.m. (PST)
        p.payment-engine-heading
          | Billed to:
        p
          | ABC Company Inc.
          br
          | 123 1st Road
          br
          | Seattle, WA 98102
        p#CC-number VISA # ****************4056
        br
        .receipt-cart
          p.receipt-cart-header.payment-engine-heading
            | Itemization
          .receipt-cart-items
            ul.leaders
                li
                  span Account # 305671
                  span $5,666.39
                li.description Early discount amount
          .row
            .col-sm-offset-6.col-sm-6
              .cart-totals
                ul.leaders
                  li
                    span Subtotal
                    span $5,666.39
                  li
                    span Tax
                    span $0
                  li
                    span Service Charge
                    span $0
                ul.leaders
                  li
                    span Total
                    span $5,666.39
block custom-js
  if production
    script(src="/js/custom.js")
  else
    script(src="/js/custom.compiled.js")
