extends includes/base
block whichtheme
  - var theme = 'environment'
block isfullwidth
  - var colSize = 'col-md-12'
block breadcrumb
  include includes/breadcrumb
block custom-style
  if production
    link(href="/css/custom.css" rel='stylesheet' type='text/css')
  else
    link(href="/styles/css/custom.css" rel='stylesheet' type='text/css')
block main-content
  .row.addon-row.addon-row-attached
    .col-sm-12
      .page-header
        h1 Capacity charge bill details
    include offcanvas-cart
  .row.addon-row.addon-row-attached
    .col-sm-12.col-md-8
      .row
        .col-sm-12
          .capacity-charge-search.call-out-text.call-out-text-success.m-t-0
            include searchInput
            p.m-t-md
              a(href="#" data-toggle="modal" data-target="#findSiteNumberModal") How do I find my account and site number?
            ul.list-inline.search-items
              li.search-item#item12345
                .fa.fa-times.fa-color-danger
                | &nbsp;item1
              li.search-item#item6789
                .fa.fa-times.fa-color-danger
                | &nbsp;item2
              li.search-item#item01234
                .fa.fa-times.fa-color-danger
                | &nbsp;item3
              li.search-item#item56789
                .fa.fa-times.fa-color-danger
                | &nbsp;item4
              li.search-item#clear-all
                .fa.fa-times.fa-color-danger
                | &nbsp;Clear all
          div
            - var accountNum = '305671';
            - var siteNum = '550929';
            include panels
            - var accountNum = '306789';
            - var siteNum = '598765';
            include panels
      include findSiteNumberModal
      .row
        .col-sm-6
          button.btn.btn-success.btn-block Proceed to checkout
    .col-md-4.visible-md-block.visible-lg-block
      include cart
    include addToCartModal2
block custom-js
  if production
    script(src="/js/custom.js")
  else
    script(src="/js/custom.compiled.js")
